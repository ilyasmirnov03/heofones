{
  "name": "heofones",
  "version": "1.0.0",
  "description": "Heofones is a multiplayer RPG played through an open API.",
  "main": "app.ts",
  "directories": {
    "test": "test"
  },
  "type": "module",
  "scripts": {
    "test": "npm run build:ts && tsc -p test/tsconfig.json && c8 node --test -r ts-node/register \"test/**/*.ts\"",
    "start": "npm run build:ts && fastify start -l info dist/src/app.js",
    "build:ts": "tsc",
    "watch:ts": "tsc -w",
    "dev": "npm run build:ts && concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"npm:watch:ts\" \"npm:dev:start\"",
    "prisma:generate": "prisma generate",
    "dev:start": "fastify start --ignore-watch=.ts$ -w -l info -P dist/src/app.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ilyasmirnov03/heofones.git"
  },
  "keywords": [
    "api",
    "game",
    "fastify",
    "typescript"
  ],
  "author": "ilyasmirnov03",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/ilyasmirnov03/heofones/issues"
  },
  "homepage": "https://github.com/ilyasmirnov03/heofones#readme",
  "dependencies": {
    "@fastify/autoload": "^6.3.1",
    "@fastify/sensible": "^6.0.4",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "dotenv": "^17.2.3",
    "fastify": "^5.7.1",
    "fastify-cli": "^7.4.1",
    "fastify-plugin": "^5.1.0",
    "pg": "^8.17.1"
  },
  "devDependencies": {
    "@types/node": "^24.10.9",
    "@types/pg": "^8.16.0",
    "c8": "^10.1.2",
    "concurrently": "^9.0.0",
    "fastify-tsconfig": "^3.0.0",
    "prisma": "^7.2.0",
    "ts-node": "^10.4.0",
    "typescript": "~5.9.2"
  }
}
